{
    "version": "1.4.1",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "newLineCharacter": "\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": true,
        "placeOpenBraceOnNewLineForControlBlocks": true
    },
    "filesGlob": [
        "./lib/lib.d.ts",
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./api/index.ts",
        "./api/v1/api_request.ts",
        "./api/v1/api_response.ts",
        "./api/v1/index.ts",
        "./api/v1/task.ts",
        "./api/v1/user.ts",
        "./app.ts",
        "./authentication/index.ts",
        "./lib/Invariants.ts",
        "./lib/promise_adapter.ts",
        "./models/index.ts",
        "./models/logic/plain_object.ts",
        "./models/logic/query.ts",
        "./models/logic/task_group_logic.ts",
        "./models/logic/task_logic.ts",
        "./models/logic/user_logic.ts",
        "./models/plugins/model_invariants.ts",
        "./models/plugins/updated_status.ts",
        "./models/task.ts",
        "./models/task_group.ts",
        "./models/task_info.ts",
        "./models/user.ts",
        "./routes/index.ts",
        "./test/models__logic__plain_object.ts",
        "./test/models__logic__task_group_logic.ts",
        "./test/models__logic__task_logic.ts",
        "./test/models__logic__user_logic.ts",
        "./typings-manual/index.d.ts",
        "./typings-manual/sequelize/sequelize.d.ts",
        "./typings/body-parser/body-parser.d.ts",
        "./typings/cookie-parser/cookie-parser.d.ts",
        "./typings/debug/debug.d.ts",
        "./typings/express-session/express-session.d.ts",
        "./typings/express/express.d.ts",
        "./typings/lodash/lodash.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/mongoose/mongoose.d.ts",
        "./typings/morgan/morgan.d.ts",
        "./typings/node/node.d.ts",
        "./typings/passport/passport.d.ts",
        "./typings/q/Q.d.ts",
        "./typings/sequelize/sequelize.d.ts",
        "./typings/serve-favicon/serve-favicon.d.ts"
    ]
}
